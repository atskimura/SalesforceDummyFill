{
  "manifest_version": 3,
  "name": "Salesforce Dummy Fill",
  "version": "1.0",
  "description": "Salesforceフォームに適切なダミーデータを1クリックで入力",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.salesforce.com/*",
    "*://*.force.com/*",
    "*://*.my.salesforce.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Salesforce Dummy Fill"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.salesforce.com/*",
        "*://*.force.com/*",
        "*://*.my.salesforce.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}